{
  "name": "@jl225vf/exr",
  "version": "3.1.4",
  "description": "Fetches exchange rates from the Norges Bank API and provides clean, developer-friendly data structures.",
  "type": "module",
  "main": "./src/index.js",
  "exports": {
    ".": "./src/index.js"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "test": "c8 mocha 'test/**/*.spec.js' --exit",
    "lint": "npx eslint ./ || exit 0",
    "lint:fix": "npx eslint ./ --fix || exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JuliaLind/1DV610-L2.git"
  },
  "author": "Julia Lind",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JuliaLind/1DV610-L2/issues"
  },
  "eslintConfig": {
    "extends": "@lnu",
    "plugins": [
      "chai-friendly"
    ],
    "rules": {
      "no-unused-expressions": "off",
      "chai-friendly/no-unused-expressions": "error"
    }
  },
  "homepage": "https://github.com/JuliaLind/1DV610-L2#readme",
  "devDependencies": {
    "@lnu/eslint-config": "^1.1.10",
    "c8": "^10.1.3",
    "chai": "^6.0.1",
    "chai-as-promised": "^8.0.2",
    "eslint-plugin-chai-friendly": "^1.1.0",
    "mocha": "^11.7.2",
    "sinon": "^21.0.0",
    "sinon-chai": "^4.0.1"
  },
  "c8": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "text",
      "html"
    ]
